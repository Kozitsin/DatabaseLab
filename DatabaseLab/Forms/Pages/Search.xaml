<Page x:Class="DatabaseLab.Forms.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatabaseLab.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Search">

    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="uidButton" Content="Uid" HorizontalAlignment="Left" Margin="145,1,0,0" VerticalAlignment="Top" Width="75" Click="uidButton_Click"/>
        <Button x:Name="stringButton" Content="String" HorizontalAlignment="Left" Margin="225,1,0,0" VerticalAlignment="Top" Width="75" Click="stringButton_Click"/>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="272" Margin="0,28,0,0" VerticalAlignment="Top" Width="300">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Page>
